<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>org.mklab.taskit.server.LoginServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>account</servlet-name>
		<servlet-class>org.mklab.taskit.server.AccountServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>attendance</servlet-name>
		<servlet-class>org.mklab.taskit.server.AttendanceServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>lecture</servlet-name>
		<servlet-class>org.mklab.taskit.server.LectureServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/taskit/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>account</servlet-name>
		<url-pattern>/taskit/account</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>attendance</servlet-name>
		<url-pattern>/taskit/attendance</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>lecture</servlet-name>
		<url-pattern>/taskit/lecture</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>taskit.html</welcome-file>
	</welcome-file-list>

</web-app>

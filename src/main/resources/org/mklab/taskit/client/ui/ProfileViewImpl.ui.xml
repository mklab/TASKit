<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>
		<h1>Profile Settings</h1>
		<g:VerticalPanel>
			<g:CaptionPanel captionText='User Name'>
				<g:FlowPanel>
					<g:TextBox ui:field='userName'></g:TextBox>
					<g:Button ui:field='userNameChangeButton'>Change</g:Button>
				</g:FlowPanel>
			</g:CaptionPanel>
			<g:CaptionPanel captionText='Password'>
				<g:VerticalPanel>
					<g:FlowPanel>
						<g:Label>Current Password:</g:Label>
						<g:PasswordTextBox ui:field='currentPassword'></g:PasswordTextBox>
					</g:FlowPanel>
					<g:FlowPanel>
						<g:Label>Password:</g:Label>
						<g:PasswordTextBox ui:field='password1'></g:PasswordTextBox>
					</g:FlowPanel>
					<g:FlowPanel>
						<g:Label>Password (Confirmation):</g:Label>
						<g:PasswordTextBox ui:field='password2'></g:PasswordTextBox>
						<g:Button ui:field='passwordChangeButton'>Change</g:Button>
					</g:FlowPanel>
				</g:VerticalPanel>
			</g:CaptionPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
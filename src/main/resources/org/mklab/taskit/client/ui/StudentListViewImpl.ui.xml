<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ce="urn:import:com.google.gwt.user.cellview.client"
	xmlns:mk="urn:import:org.mklab.taskit.client.ui">

	<ui:style>
		.userListArea {
			background-color:#eeeeee;
			width : 200%;
		}
		.toolbar {
			background-color:#eeeeee;
		}
		.fillHorizontal {
			width : 100%;
		}
		.userInfoArea {
			background-color:#ccddbb;
		}
		.horizontalSpace{
			width : 5pt;
		}
		.records {
			width : 100%;
			height : 100%;
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM'>
		<g:north size='7'>
			<g:VerticalPanel styleName='{style.fillHorizontal}'>
				<g:HorizontalPanel styleName='{style.userListArea}'>
					<g:HorizontalPanel>
						<g:cell verticalAlignment="ALIGN_MIDDLE">
							<g:Label ui:field='userListLabel'>User List: </g:Label>
						</g:cell>
						<g:cell verticalAlignment="ALIGN_MIDDLE">
							<g:ValueListBox ui:field='userList'></g:ValueListBox>
						</g:cell>
						<g:cell verticalAlignment="ALIGN_MIDDLE">
							<g:ValueListBox ui:field='sortTypeList'></g:ValueListBox>
						</g:cell>
						<g:Label styleName='{style.horizontalSpace}'></g:Label>
						<g:cell verticalAlignment="ALIGN_MIDDLE">
							<g:Image ui:field='scoreButton'></g:Image>
						</g:cell>
						<g:cell verticalAlignment="ALIGN_MIDDLE">
							<g:Image ui:field='reloadButton'></g:Image>
						</g:cell>
						<g:cell verticalAlignment="ALIGN_MIDDLE">
							<g:Image ui:field='uncallButton'></g:Image>
						</g:cell>
					</g:HorizontalPanel>
				</g:HorizontalPanel>
				<g:CaptionPanel ui:field='userInfoPanel' styleName='{style.userInfoArea}'>
					<mk:UserInfoView ui:field='userInfoView'></mk:UserInfoView>
				</g:CaptionPanel>
			</g:VerticalPanel>
		</g:north>
		<!-- Profile and Scores -->
		<g:center>
			<mk:StudentwiseRecordPanel ui:field='panel'></mk:StudentwiseRecordPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ce="urn:import:com.google.gwt.user.cellview.client"
	xmlns:mk="urn:import:org.mklab.taskit.client.ui">

	<ui:style>
		.userListArea {
			background-color:#eeeeee;
		}
		.toolbar {
			background-color:#eeeeee;
		}
		.fillHorizontal {
			width : 100%;
		}
		.records {
			width : 100%;
			height : 100%;
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM'>
		<!-- User List -->
		<g:north size='10'>
			<g:VerticalPanel styleName='{style.fillHorizontal}'>
				<g:HorizontalPanel styleName='{style.userListArea}'>
					<g:cell verticalAlignment="ALIGN_MIDDLE">
						<g:Label ui:field='userListLabel'>User List: </g:Label>
					</g:cell>
					<g:cell verticalAlignment="ALIGN_MIDDLE">
						<g:ValueListBox ui:field='userList'></g:ValueListBox>
					</g:cell>
					<g:cell verticalAlignment="ALIGN_MIDDLE">
						<g:ValueListBox ui:field='sortTypeList'></g:ValueListBox>
					</g:cell>
					<g:cell verticalAlignment="ALIGN_MIDDLE">
						<g:Button ui:field='reloadButton'></g:Button>
					</g:cell>
				</g:HorizontalPanel>
				<g:CaptionPanel captionText='User Info' ui:field='userInfoCaption'>
					<g:VerticalPanel styleName='{style.fillHorizontal}'>
						<mk:UserInfoView ui:field='userInfoView'></mk:UserInfoView>
						<g:cell horizontalAlignment="ALIGN_RIGHT">
							<g:Button ui:field='uncallButton'>Uncall</g:Button>
						</g:cell>
					</g:VerticalPanel>
				</g:CaptionPanel>
			</g:VerticalPanel>
		</g:north>
		<!-- Profile and Scores -->
		<g:center>
			<mk:StudentwiseRecordPanel ui:field='panel'></mk:StudentwiseRecordPanel>
		</g:center>
	</g:DockLayoutPanel>
	
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ce="urn:import:com.google.gwt.user.cellview.client"
	xmlns:mk="urn:import:org.mklab.taskit.client.ui">

	<ui:style>
		.padding {
			width:10px;
		}
		.rightSideBar {
			width:100%;
		}
		.helpCallArea {
			width:100%;
			border : solid 2px gray;
		}
		.padding {
			height : 30px;
		}
		.fillHorizontal {
			width : 100%;
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM'>
		<g:north size='7'>
			<g:FlowPanel>
				<g:CaptionPanel captionText='Profile' ui:field='profileCaption'>
					<g:VerticalPanel>
						<g:HorizontalPanel>
							<g:Label ui:field='userIdLabel'>User ID:</g:Label>
							<g:Label ui:field='userId'></g:Label>
						</g:HorizontalPanel>
						<g:HorizontalPanel>
							<g:Label ui:field='userNameLabel'>User Name:</g:Label>
							<g:Label ui:field='userName'></g:Label>
						</g:HorizontalPanel>
						<g:HorizontalPanel>
							<g:Label ui:field='scoreLabel'>Score:</g:Label>
							<g:Label ui:field='score'></g:Label>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:CaptionPanel>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<mk:StudentwiseRecordPanel ui:field='scorePanel'></mk:StudentwiseRecordPanel>
		</g:center>
		<g:east size='15'>
			<g:VerticalPanel styleName='{style.rightSideBar}'>
				<g:VerticalPanel styleName='{style.helpCallArea}'
					ui:field='helpCallArea'>
					<g:Label ui:field='helpCallPosition'></g:Label>
					<g:ToggleButton ui:field='helpCallButton'></g:ToggleButton>
					<g:Label ui:field='helpCallMessageLabel'>Message:</g:Label>
					<g:TextBox ui:field='helpCallMessage'></g:TextBox>
				</g:VerticalPanel>
				<mk:RecordView></mk:RecordView>
			</g:VerticalPanel>
		</g:east>
	</g:DockLayoutPanel>

</ui:UiBinder> 
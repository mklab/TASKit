<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ce="urn:import:com.google.gwt.user.cellview.client"
	xmlns:mk="urn:import:org.mklab.taskit.client.ui">

	<ui:style>
		.rightSideBar {
			width:100%;
			height:100%;
			padding:5px;
			background:#eeeeee;
		}
		.verticalSpace {
			height : 30px;
		}
		.fillHorizontal {
			width : 100%;
		}
	</ui:style>

	<g:SplitLayoutPanel>
		<g:center>
			<mk:StudentwiseRecordPanel ui:field='scorePanel'></mk:StudentwiseRecordPanel>
		</g:center>
		<g:east size='200'>
			<g:VerticalPanel styleName='{style.rightSideBar}'>
				<g:VerticalPanel ui:field='helpCallArea'>
					<g:Label ui:field='helpCallPosition'></g:Label>
					<g:ToggleButton ui:field='helpCallButton'></g:ToggleButton>
					<g:Label ui:field='helpCallMessageLabel'>Message:</g:Label>
					<g:TextBox ui:field='helpCallMessage'></g:TextBox>
					<g:VerticalPanel styleName='{style.verticalSpace}'></g:VerticalPanel>
					<g:CaptionPanel ui:field='userInfoCaption'>
						<mk:UserInfoView ui:field='userInfoView'></mk:UserInfoView>
					</g:CaptionPanel>
					<g:CaptionPanel ui:field='statisticsCaption'>
						<mk:StatisticsView ui:field='statisticsView'></mk:StatisticsView>
					</g:CaptionPanel>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:east>
	</g:SplitLayoutPanel>

</ui:UiBinder> 
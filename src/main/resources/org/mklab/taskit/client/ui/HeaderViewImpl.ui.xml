<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.base {
			background-color: gray;
			display: inline;
			position: fixed;
			top: 0;
			padding: 4px;
			width: 100%;
			border: solid 2px black;
		}
		
		.title {
			display: inline;
			font-weight: bold;
			vertical-align: middle;
			font-size: 18px;
		}
		
		.rightAlignment {
			position: fixed;
			display: inline;
			right: 0px;
			margin: 0px;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class='{style.base}'>
			<span class="{style.title}">TASKit</span>
			<span style='padding-left:50px' />
			<g:Button ui:field='studentListLink'>Student List</g:Button>
			<g:Button ui:field='scoreLink'>Score</g:Button>
			<g:Button ui:field='attendanceLink'>Attendance</g:Button>
			<g:Button ui:field='adminLink'>Admin</g:Button>

			<div class='{style.rightAlignment}'>
				<g:InlineLabel ui:field="userIdLabel" />
				<span style='padding-left:10px' />
				|
				<span style='padding-left:10px' />
				<g:InlineLabel ui:field="userTypeLabel" />
				<span style='padding-left:10px' />
				<g:Button ui:field="logoutButton" />
				<span style='padding-left:5px' />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 
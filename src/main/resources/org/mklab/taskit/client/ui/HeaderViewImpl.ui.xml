<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.base {
			background-color: gray;
			padding: 4px;
		}
		
		.title {
			display: inline;
			　　
		}
		
		.rightAlignment {
			display: inline;
			position: absolute;
			right: 0;
			margin: 0;
		}
	</ui:style>


	<g:HTMLPanel styleName='{style.base}'>
		<h2 class="{style.title}">TASKit</h2>
		<span style='padding-left:50px' />
		<g:Button ui:field='scoreButton'>Score</g:Button>
		<g:Button ui:field='attendanceButton'>Attendance</g:Button>
		<div class='{style.rightAlignment}'>
			<g:InlineLabel ui:field="userIdLabel" />
			<span style='padding-left:10px' />
			|
			<span style='padding-left:10px' />
			<g:InlineLabel ui:field="userTypeLabel" />
			<span style='padding-left:10px' />
			<g:Button ui:field="logoutButton" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.base {
			-moz-border-radius: 6px;
			-webkit-border-radius: 6px;
			border-radius: 6px;
			background:#6C85A4;
			background: literal("-webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #6C85A4), color-stop(50%, #556C89),color-stop(51%, #4B5F79), color-stop(100%, #415369))");
			border: solid 1px
			black;
		}

		.toolbar{
			padding-left:10px;
			height:32px;
		}

		.label{
			color:white;
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX' styleName='{style.base}'>
		<g:center>
			<g:HorizontalPanel ui:field='buttonPanel'
				styleName='{style.toolbar}'>
			</g:HorizontalPanel>
		</g:center>
		<g:east size='100'>
			<g:VerticalPanel>
				<g:InlineLabel ui:field="userIdLabel" styleName='{style.label}'>unknown</g:InlineLabel>
				<g:InlineLabel ui:field="userTypeLabel" styleName='{style.label}'>unknown</g:InlineLabel>
			</g:VerticalPanel>
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder> 